<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:windowSoftInputMode="adjustResize"
    android:background="@drawable/bg_fragment"
    tools:context=".fragments.datlich">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cố vấn học tập"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <!-- Radio Button for advisor -->
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐẶNG THỊ NHUNG"
                android:checked="true" />

            <!-- Date Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tháng"
                android:textColor="@android:color/holo_red_dark"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="05/04/2024"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <!-- Time Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn thời gian"
                android:textColor="@android:color/holo_red_dark"
                android:paddingTop="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <!-- Time Buttons -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button0800"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="08:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button0830"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="08:30"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button0900"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="09:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button0930"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="09:30"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="10:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1030"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="10:30"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="11:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1400"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="14:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1430"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="14:30"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="15:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1530"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="15:30"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1600"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="16:00"
                    android:layout_margin="4dp"
                    android:background="@drawable/rounded_button"/>
            </GridLayout>


            <!-- Reason EditText -->
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lý do"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:drawablePadding="4dp" />

            <EditText
                android:id="@+id/edtLyDo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bảo lưu kết quả học tập"
                android:minHeight="100dp"
                android:maxLength="255"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnDatlichGv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lịch đặt"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/holo_blue_light"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>