<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#FFDDDDDD" /> <!-- Màu nền khi button được nhấn -->
                <corners android:radius="16dp" /> <!-- Bo góc -->
                <stroke
                    android:width="2dp"
                    android:color="#FF000000" /> <!-- Viền đen -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFFFF" /> <!-- Màu nền mặc định -->
                <corners android:radius="16dp" /> <!-- Bo góc -->
                <stroke
                    android:width="2dp"
                    android:color="#FF000000" /> <!-- Viền đen -->
            </shape>
        </item>
    </selector>

