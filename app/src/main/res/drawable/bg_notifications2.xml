<!-- res/drawable/rectangle_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray1" /> <!-- Màu đen với độ trong suốt 50% -->
            <corners android:radius="8dp" />
            <padding

                android:bottom="3dp" /> <!-- Khoảng cách để tạo hiệu ứng đổ bóng phía dưới -->
        </shape>
    </item>

    <!-- Rectangle -->
    <item android:top="0dp" android:left="2dp" android:right="2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Nền trắng -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
        </shape>
    </item>
</layer-list>